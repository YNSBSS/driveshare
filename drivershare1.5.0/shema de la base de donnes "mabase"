CREATE TABLE course (
    id INT PRIMARY KEY,                -- Cl� primaire de la table "course"
    id_user INT,                       -- Cl� �trang�re vers la table "user"
    id_chauffeur INT,                  -- Cl� �trang�re vers la table "chauffeur"
