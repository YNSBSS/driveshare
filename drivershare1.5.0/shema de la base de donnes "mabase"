CREATE TABLE users(
    id INT PRIMARY KEY,
    nom_prenom VARCHAR(100),
    email VARCHAR(100) UNIQUE,
    numero_telephone VARCHAR(15),
    mot_de_passe VARCHAR(50),
    matricule BIGINT,
    notion FLOAT CHECK (notion >= 0 AND notion <= 5), -- Colonne pour la notion (r�els entre 0 et 5)
    code_promo BOOLEAN -- Colonne pour le code promo (bool�en)
);

