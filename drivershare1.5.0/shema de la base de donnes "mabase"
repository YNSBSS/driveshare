    FOREIGN KEY (id_user) REFERENCES user(id),          -- Cl� �trang�re vers la table "user"
    FOREIGN KEY (id_chauffeur) REFERENCES chauffeur(id)  -- Cl� �trang�re vers la table "chauffeur"
